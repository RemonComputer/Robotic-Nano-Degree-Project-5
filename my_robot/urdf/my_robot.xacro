<?xml version='1.0'?>

<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo" />
  <link name="robot_footprint"></link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0.1" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="15.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size=".42 .5 .1"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size=".42 .5 .1"/>
      </geometry>
      <material name="chassis_material">
        <color rgba="0.75 0.75 0.75294 1"/>
      </material>
    </visual>

  </link>

   <link name="left_front_wheel">
  <pose>0 0 0 0 0 0</pose>
  <!-- -0.15 -0.2 0.1 -->
  <visual>
    <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
   <geometry>
    <cylinder radius="0.1" length="0.05"/>
   </geometry>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
   <geometry>
    <cylinder radius="0.1" length="0.05"/>
   </geometry>
  </collision>
  <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
  </link>

   <link name="left_back_wheel">
  <pose>0 0 0 0 0 0</pose>
  <!-- -0.15 -0.2 0.1 -->
  <visual>
    <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
   <geometry>
    <cylinder radius="0.1" length="0.05"/>
   </geometry>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
   <geometry>
    <cylinder radius="0.1" length="0.05"/>
   </geometry>
  </collision>
  <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
  </link>

<link name="right_front_wheel">
  <pose>0 0 0 0 0 0</pose>
  <!-- -0.15 -0.2 0.1 -->
  <visual>
    <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
   <geometry>
    <cylinder radius="0.1" length="0.05"/>
   </geometry>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
   <geometry>
    <cylinder radius="0.1" length="0.05"/>
   </geometry>
  </collision>
  <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
  </link>

<link name="right_back_wheel">
  <pose>0 0 0 0 0 0</pose>
  <!-- -0.15 -0.2 0.1 -->
  <visual>
    <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
   <geometry>
    <cylinder radius="0.1" length="0.05"/>
   </geometry>
  </visual>
  <collision>
    <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
   <geometry>
    <cylinder radius="0.1" length="0.05"/>
   </geometry>
  </collision>
  <inertial>
      <mass value="5.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
  </link>


  <joint type="continuous" name="left_front_wheel_hinge">
    <origin xyz="0.11 0.3 0" rpy="0 0 0"/>
    <child link="left_front_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <joint type="continuous" name="left_back_wheel_hinge">
    <origin xyz="-0.11 0.3 0" rpy="0 0 0"/>
    <child link="left_back_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>


  <joint type="continuous" name="right_front_wheel_hinge">
    <origin xyz="0.11 -0.3 0" rpy="0 0 0"/>
    <child link="right_front_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

   <joint type="continuous" name="right_back_wheel_hinge">
    <origin xyz="-0.11 -0.3 0" rpy="0 0 0"/>
    <child link="right_back_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>


<link name="camera_link">
  <origin xyz="0 0 0" rpy="0 0 0"/>
  <visual>
    <geometry>
      <box size="0.05 0.05 0.05"/>
    </geometry>
  </visual>
  <collision>
    <geometry>
     <box size="0.05 0.05 0.05"/>
   </geometry>
  </collision>
  <inertial>
    <origin xyz="0.05 0.05 0.05" rpy="0 0 0"/>
    <mass value="0.1"/>
    <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
  </inertial>
</link>
 
<joint name="camera_joint" type="fixed">
  <origin xyz="0.21 0 0" rpy="0 0 0"/>
  <parent link="chassis"/>
  <child link="camera_link"/>
  <axis xyz="0 1 0"/>
</joint>

<link name="hokuyo">
  <origin xyz="0 0 0" rpy="0 0 0"/>
  <visual>
    <geometry>
     <mesh filename="package://my_robot/meshes/hokuyo.dae"/>
   </geometry>
  </visual>
  <collision>
    <geometry>
     <box size="0.1 0.1 0.1"/>
   </geometry>
  </collision>
  <inertial>
    <mass value="1e-5"/>
    <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
  </inertial>
</link>

<joint name="hokuyo_joint" type="fixed">
  <origin xyz="0.21 0 0.1" rpy="0 0 0"/>
  <parent link="chassis"/>
  <child link="hokuyo"/>
  <axis xyz="0 1 0"/>
</joint>

<gazebo reference="left_front_wheel">
    <material>Gazebo/Blue</material>
</gazebo>

<gazebo reference="left_back_wheel">
    <material>Gazebo/Blue</material>
</gazebo>

<gazebo reference="right_front_wheel">
    <material>Gazebo/Blue</material>
</gazebo>

<gazebo reference="right_back_wheel">
    <material>Gazebo/Blue</material>
</gazebo>

<gazebo reference="chassis">
    <material>Gazebo/Green</material>
</gazebo>

<gazebo reference="camera_link">
    <material>Gazebo/Red</material>
</gazebo>

<joint name="camera_optical_joint" type="fixed">
    <origin xyz="0 0 0" rpy="-1.5707 0 -1.5707"/>
    <parent link="camera_link"/>
    <child link="camera_link_optical"/>
</joint>

<link name="camera_link_optical">
</link>

</robot>

